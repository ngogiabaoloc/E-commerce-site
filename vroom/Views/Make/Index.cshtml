@model IEnumerable<vroom.Models.Make>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Makes of Vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add New Make</a>
    </div>
    <br />

    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
            </tr>
            
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(m => item.Id)*@
                @item.Id
            </td>
        @*<partial name="_TableButtonPartials" model="item.Id" />*@

<td class="text-right">
                <div>
                    @*<a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.Id)">Edit</a>*@
                    <a type="button" class="btn btn-primary" href="@Url.Action("edit", new { id = item.Id })">Edit</a>
                    <a type="button" class="btn btn-primary" href="@Url.Action("delete", new { id = item.Id })">Delete</a>

                </div>

            </td>
        </tr>
                
             }

        </table>
    </div>


</div>