@model vroom.Models.Book

@{
    ViewData["Title"] = "Checkout Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sub_total = (int)ViewData["Sub_total"];
    double total = sub_total * 1.1;
    total = Math.Round(total, 2);
}

<h2>Welcome to Our Checkout Page</h2>

	<div id="checkout_container" >
        <div id="order_summary">
            <h3>Order Summary</h3>
            Subtotal: $@sub_total
            <br>
            Tax: 10%
            <br>
            <b>Total: $@total</b>
        </div>
		<div id="shipping">
		<h3>Shipping Details</h3>
		<form asp-action="DoneTransaction">
    	<label for="fname">First name:</label><br>
    	<input type="text" id="fname" name="fname" value="John"><br>
    	<label for="lname">Last name:</label><br>
    	<input type="text" id="lname" name="lname" value="Doe"><br><br>
    	<label for="lname">Company:</label><br>
   		<input type="text" id="company" name="company" value="FDU"><br><br>
    	<label for="lname">Country:</label><br>
    	<input type="text" id="country" name="country" value="Canada"><br><br>
    	<label for="lname">Street Address:</label><br>
    	<input type="text" id="saddress" name="saddress" value="842 Cambie St"><br><br>
		<div>
			<h3>Payment Information</h3>
    		<label for="lname">Card Number:</label><br>
    		<input type="text" id="cnumber" name="cnumber" value="1234567890"><br><br>
    		<label for="lname">CVC Code:</label><br>
    		<input type="text" id="cvccode" name="cvccode" value="123"><br><br>
		</div>
    	<input type="submit" value="Submit">
		</form> 
		</div>
	</div>